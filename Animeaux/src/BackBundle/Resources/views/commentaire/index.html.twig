{% extends '::layoutAdmin.html.twig' %}

{% block contenu %}
<style>
    h1 {
        color: #d81d1d;
        font-family: cursive;

    }
    .btn-warning {
        background-color: #f9133e;
        border-color: #e08e0b;
    }
</style>
<br><br>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="
    background-color: #fff;
">


    <center><h1>Commentaire list</h1></center>


    <table class="table table-striped table-hover">

        <tr>


                <th  style="width:20%" class="danger">Iduser</th>
                <th  style="width:20%" class="danger">Date commentaire</th>
                <th  style="width:20%" class="danger">darticle</th>
                <th  style="width:20%" class="danger">Description</th>
                <th  style="width:20%" class="danger">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>

                <td>{{ commentaire.idUser }}</td>
                <td>{% if commentaire.dateCommentaire %}{{ commentaire.dateCommentaire|date('Y-m-d') }}{% endif %}</td>
                <td>{{ commentaire.idArticle }}</td>
                <td>{{ commentaire.description }}</td>

              <td><a href="{{ path('commentaire_delete', { 'id': commentaire.id }) }}">delete</a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
