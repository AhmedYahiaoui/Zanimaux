{% extends '::layoutAdmin.html.twig' %}

{% block contenu %}
<style>
    h1 {
        color: #d81d1d;
        font-family: cursive;

    }
    .btn-warning {
        background-color: #f9133e;
        border-color: #e08e0b;
    }
</style>
<br><br>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="
    background-color: #fff;
">


    <center><h1>Feedback list</h1></center>

    <table class="table table-striped table-hover">

        <tr>
                <th  style="width:25%" class="danger">Id</th>
                <th  style="width:25%" class="danger">Iduser</th>
                <th  style="width:25%" class="danger">Idevent</th>
                <th  style="width:25%" class="danger">Datefeed</th>
                <th  style="width:25%" class="danger">Description</th>
                <th  style="width:25%" class="danger">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feed in feeds %}
            <tr>
                <td>{{ feed.id }}</td>
                <td>{{ feed.idUser }}</td>
                <td>{{ feed.idEvent }}</td>
                <td>{% if feed.dateFeed %}{{ feed.dateFeed|date('Y-m-d') }}{% endif %}</td>
                <td>{{ feed.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('feed_Admin_delete', { 'id': feed.id }) }}">delete</a>
                        </li>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
