{% extends "::layoutAdmin.html.twig" %}

{% block contenu %}


    <style>
        h1 {
            color: #d81d1d;
            font-family: cursive;

        }
        .btn-warning {
            background-color: #f9133e;
            border-color: #e08e0b;
        }
    </style>
    <br><br>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="
    background-color: #fff;
">


        <center><h1>Product list</h1></center>





        <table class="table table-striped table-hover">

            <tr>

                <th  style="width:10%" class="danger">nom</th>
                <th  style="width:10%" class="danger">Marque</th>
                <th  style="width:10%" class="danger">type</th>
                <th  style="width:10%" class="danger">prix</th>
                <th  style="width:10%" class="danger">quantit√©</th>
                <th  style="width:30%" class="danger">description</th>
