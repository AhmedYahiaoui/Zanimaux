                <th  style="width:10%" class="danger">adresse boutique</th>
                <th  style="width:10%" class="danger">nom boutique</th>
                <th  style="width:10%" class="danger">num_tele</th>
                <th  style="width:10%" class="danger">etat</th>
                <th  style="width:10%" class="danger">image</th>

                <th  style="width:10%" class="danger">Actions</th>
            </tr>
            </thead>
            <tbody>

            {% for produit in produits %}



                <tr>
                    <td> {{ produit.nom }}</td>
                    <td>{{ produit.marque }}</td>
                    <td>{{ produit.type }}</td>
                    <td>{{ produit.prix }}</td>
                    <td>{{ produit.quantite }}</td>
                    <td>{{ produit.description }}</td>
                    <td>{{ produit.rating }}</td>
                    <td>{{ produit.adresseBoutique }}</td>
                    <td>{{ produit.nomBoutique }}</td>
                    <td>{{ produit.numTele }}</td>
                    <td>{{ produit.etat }}</td>
                    <td>
                    <img src="{{ asset('images/') }}{{ produit.nomImage }}" class="img-fluid" alt=""  width="70px"></td>

                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('produit_Admin_edit', { 'ref': produit.ref }) }}">edit</a>
                            </li>
                            <li>
                                <a href="{{ path('produit_Admin_delete', { 'ref': produit.ref }) }}">delete</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
        {% endblock %}
