{% trans_default_domain 'FOSUserBundle' %}




{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <center>



<br><br><br>
<table>

    <tr>
        <th>
            <div class="col-md-3 col-xs-12 comment-img text-center float-left">
                <img class="rounded img-fluid m-x-auto" src="{{ asset('images/introimg1.jpg') }}" >
            </div>
        </th>
    </tr>


    <tr>
        <th> <label for="username">{{ 'security.login.username'|trans }}</label></th>
    </tr>



    <tr>
        <th> <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control"/> </th>
    </tr>



    <tr>
        <th> <label for="password">{{ 'security.login.password'|trans }}</label></th>
    </tr>

    <tr>
        <th> <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control"/> </th>
    </tr>

    <tr>
        <th><input type="checkbox" id="remember_me" name="_remember_me" value="on"/><label for="remember_me">{{ 'security.login.remember_me'|trans }}</label></th>

    </tr>

    <tr>
        <th><center><input type="submit" id="_submit" name="_submit" class="btn btn-warning" value="{{ 'security.login.submit'|trans }}" /> </center> </th>
    </tr>

</table>
</center>
</form>

